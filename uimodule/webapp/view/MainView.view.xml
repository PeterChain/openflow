 <mvc:View controllerName="pt.chain.OpenFlow.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Page title="{i18n>appTitle}">
    <content>
      <VBox alignItems="Center" alignContent="Center" >
        <Label text="{i18n>case}" labelFor="caseId"/>
        <Input id="caseId" maxLength="4"></Input>
        <Label text="{i18n>version}" labelFor="caseVersion"/>
        <Input id="caseVersion" type="Number" maxLength="3"></Input>
        <Button icon="sap-icon://action" text="{i18n>displayDiag}" press="displayDiag"></Button>
      </VBox>
    </content>
  </Page>
</mvc:View>